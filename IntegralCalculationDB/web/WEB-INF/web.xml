<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>IntegralServlet</servlet-name>
        <servlet-class>pl.polsl.lab.servlets.IntegralServlet</servlet-class>
        <init-param>
            <param-name>driver</param-name>
            <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
        </init-param>
        <init-param>
            <param-name>url</param-name>
            <param-value>jdbc:derby://localhost:1527/integration</param-value>
        </init-param>
        <init-param>
            <param-name>user</param-name>
            <param-value>lab</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>pass</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>History</servlet-name>
        <servlet-class>pl.polsl.lab.servlets.History</servlet-class>
        <init-param>
            <param-name>driver</param-name>
            <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
        </init-param>
        <init-param>
            <param-name>url</param-name>
            <param-value>jdbc:derby://localhost:1527/integration</param-value>
        </init-param>
        <init-param>
            <param-name>user</param-name>
            <param-value>lab</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>pass</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Cookies</servlet-name>
        <servlet-class>pl.polsl.lab.servlets.Cookies</servlet-class>
        <init-param>
            <param-name>driver</param-name>
            <param-value>org.apache.derby.jdbc.ClientDriver</param-value>
        </init-param>
        <init-param>
            <param-name>url</param-name>
            <param-value>jdbc:derby://localhost:1527/integration</param-value>
        </init-param>
        <init-param>
            <param-name>user</param-name>
            <param-value>lab</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>pass</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>IntegralServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>History</servlet-name>
        <url-pattern>/history</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cookies</servlet-name>
        <url-pattern>/cookies</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
